@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="container">
<h1 style="margin-top: 9.5vh">@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h2>Use a local account to log in.</h2>
                    <hr />
               
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-12">
                        <input asp-for="Input.Email" placeholder="Enter Email" class="form-control" autocomplete="email" aria-required="true" style="margin-bottom: 1vh"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <input asp-for="Input.Password" placeholder="Enter Password" class="form-control" autocomplete="current-password" aria-required="true"  style="margin-bottom: 1vh"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox"  style="margin-bottom: 1vh">
                            <label style="color: #FFFFFF" asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <br/>
                    <div>
                        <p>
                            <a style="margin-bottom: 5px" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a><br/>
                            <a style="margin-bottom: 5px" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a><br/>
                            <a style="margin-bottom: 5px" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

