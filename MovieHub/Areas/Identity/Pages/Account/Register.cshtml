@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject RoleManager<IdentityRole> RoleManager

<h1>@ViewData["Title"]</h1>

@{
    var userRoles = RoleManager.Roles.ToList();
    var roles = new List<String>();
    foreach (var role in userRoles)
    {
        roles.Add(role.Name);
    }
}
@if (SignInManager.IsSignedIn(User) && User.IsInRole("Administrator"))
{
    <div class="row">
        <div class="col-md-4">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>Create a new account.</h2>
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                    <label asp-for="Input.Email" class="label-text-color"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true"/>
                    <label asp-for="Input.Password" class="label-text-color"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"/>
                    <label asp-for="Input.ConfirmPassword" class="label-text-color"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    @Html.DropDownListFor(r => r.Input.UserRole, new SelectList(roles))
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>
    </div>
    }
else
{
    <p><strong>Only administators can create new accounts.</strong></p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
