@model MovieHub.ViewModels.AddRoleViewModel


@{
    ViewData["Title"] = "Add Role";
}
<div class="container" style="margin-top: 9.5vh">
    
    <div class="col-5 mx-auto">
        <h1>Add Role</h1>
        <h2>Create new employee roles.</h2>
        <hr class="role-hr mt-3 mb-5"/>
                <form asp-action="AddRole" method="post" class="mt-3">
            <div class="form-group row">
                <div>
                    <input asp-for="RoleName" class="form-control" placeholder="Role name"/>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
            <br/>
            <div class="form-group col-12">
                <div class="row">
                    <div class="col-4">
                        <input type="button" class="btn back-button" value="Back" onclick="location.href='@Url.Action("RoleList", "Admin")'" style="width: 100%"/>
                    </div>
                    <div class="col-8">
                        <button type="submit" class="btn btn-primary" style="width: 100%">Add Role</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
