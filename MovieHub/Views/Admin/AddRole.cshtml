@model MovieHub.ViewModels.AddRoleViewmodel

@{
    ViewData["Title"] = "All roles";
}

<h2>Add role</h2>

<form asp-action="AddRole" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="RoleName" class="col-1 col-form-label"></label>
    <div>
        <input asp-for="RoleName" class="form-control" placeholder="Name"/>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    </div>
    
    <div class="form-group col-4">
        <button type="submit" class="btn btn-primary">Add role</button>
        <div>
            <a asp-action="ListAllRoles" class="btn btn-info my-3"><i class="fa fa-angle-left" aria-hidden="true"></i> Back</a>
               
        </div>
</div>
</form>