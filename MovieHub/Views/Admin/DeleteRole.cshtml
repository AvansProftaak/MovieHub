@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Delete Role";
}

<div class="container" style="margin-top: 9.5vh">
    <div class="col-5 mx-auto">
        <h1>Delete @Model.Name.ToLower()-role</h1>
        <h3>Are you sure you want to delete it?</h3>
        <br/>
        <hr class="role-hr"/>

    
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" asp-action="ConfirmDelete" asp-controller="Admin" asp-route-id="@Model.Id" class="mt-3 col-9">
            <button type="submit" class="btn btn-primary col-5">YES! &nbsp; DELETE IT</button>
            <a asp-action="RoleList" class="btn back-button float-end col-3">NO!</a>

        </form>
    </div>
</div>