@model MovieHub.ViewModels.EditRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<div class="container" style="margin-top: 9.5vh" xmlns="http://www.w3.org/1999/html">
    <div class="row">
        <div class="col-5">
            <h1>Edit role</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-5">
            <h2>Change employee roles</h2>
            <br/>
            <hr class="role-hr"/>
        </div>
        <div class="col-2"></div>
        <div class="col-5">
            <h2>Users with @Model.RoleName role</h2>
            <br/>
            <hr class="role-hr"/>
        </div>
    </div>


    <form method="post" class="row">
        <div class="mt-3 col-5">

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Id" class="col-form-label"></label>
                </div>
                <div class="col-9">
                    <input asp-for="Id" disabled class="form-control" style="font-size: 0.9em"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="RoleName" class="col-form-label"></label>
                </div>
                <div class="col-9">
                    <input asp-for="RoleName" class="form-control p-2"/>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
            <br/>

            @* <div asp-validation-summary="All" class="text-danger"></div> *@

            <div class="form-group">
                <a asp-action="RoleList" class="btn back-button col-4">Back</a>
                <button type="submit" class="btn btn-primary float-end mr-3 col-7">Update</button>
            </div>
        </div>

        <div class="col-2"></div>

        <div class="col-5">
            
            <table class="table table-striped col-8">
                <tr></tr>
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <tr>
                            <td class="form-label">@user</td>
                        </tr>
                    }
                }
                else
                {
                    <div>
                        <p class="form-label" style="color: #F8A613">No users with "@Model.RoleName" role</p>
                    </div>
                }

            </table>
            <div>
                <a asp-action="EditUsersInRole" asp-route-id="@Model.Id" class="btn btn-primary">Add/Remove users in role</a>
            </div>
        </div>
    </form>
</div>



