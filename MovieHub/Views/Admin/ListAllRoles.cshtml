@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "All roles";
}

<h1>All roles</h1>
 
<a class="btn btn-primary mb-2" asp-action="AddRole"><i class="fa fa-users" aria-hidden="true"></i> Add Role</a>
@if (Model.Any())
{
    <table class="table col-3">
        <thead>
            <tr>
                <td><h5>Role</h5></td>
            </tr>
        </thead>
        @foreach (var role in Model)
        {
            <tbody>
            <tr>
                <td> @role.Name</td>
                <td class="text-center">
                    <a asp-action="EditRole" asp-controller="Admin" asp-route-id="@role.Id" class="btn btn-warning btn-sm"> <i class="fa fa-pencil" aria-hidden="true"></i></a>
                    <a asp-action="DeleteRole" asp-controller="Admin" asp-route-id="@role.Id" class="btn btn-danger btn-sm"> <i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
            </tbody>
        }
        
    </table>
}
else
{
    <h5>No roles yet, use the button above to add your first role</h5>
}