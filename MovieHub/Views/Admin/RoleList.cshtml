@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

<div class="container" style="margin-top: 9.5vh">
    
    <div class="col-5 mx-auto table-role">
        
        <h1>Role List</h1>
        <h2>All employee roles</h2>
        <br>
        <hr class="role-hr"/>

        @{
            if (User.IsInRole("Admin"))
            {
                if (Model.Any())
                {
                    @foreach (var role in Model)
                    {
                        <div class="row">
                            <div class="col-8" style="pointer-events: none">@role.Name</div>
                            <div class="col-4">
                                <div class="row float-end">
                                    <div class="col-4">
                                        <a asp-action="EditRole" asp-route-id="@role.Id" class="btn edit-role-btn btn-sm"><i class="fa fa-pencil" style="color: #FFFFFF"></i></a>
                                    </div>
                                    <div class="col-3" style="margin-left: 4px">
                                        <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash" style="color: #FFFFFF"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="role-hr"/>
                    }
                }
            }
            else if (User.IsInRole("Manager"))
            {
                if (Model.Any())
                {
                    @foreach (var role in Model)
                    {
                        if ((role.Name != "Admin") && (role.Name != "Manager"))
                        {
                            <div class="row">
                                <div class="col-8" style="pointer-events: none">@role.Name</div>
                                <div class="col-4">
                                    <div class="row float-end">
                                        <div class="col-4">
                                            <a asp-action="EditRole" asp-route-id="@role.Id" class="btn edit-role-btn btn-sm"><i class="fa fa-pencil" style="color: #FFFFFF"></i></a>
                                        </div>
                                        <div class="col-3" style="margin-left: 4px">
                                            <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash" style="color: #FFFFFF"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr class="role-hr"/>
                        }
                    }
                }
            }
            else
            {
                <h5> No roles yet, use the button above to add the first role</h5>
            }
        }
        <br/>
        <input type="button" class="btn btn-primary col-5" value="Add Role" onclick="location.href='@Url.Action("AddRole", "Admin")'"/>
    </div>
</div>