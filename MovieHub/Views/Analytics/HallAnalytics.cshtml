@model MovieHub.ViewModels.HallAnalyticsViewModel

@{
    ViewData["Title"] = "MovieHub Hall Analytics";
}

<div class="row" style="margin-top: 9.5vh">
    <p>This is the hall analytics page.</p>
    <form>
        <input class="form-control" type="date" data-val="true" data-val-required="The date field is required." name="Date"
               value="@DateTime.Today">
    </form>
    
    @foreach (var hall in Model.Halls)
    {
        @Html.DisplayFor(item => hall.Name)
    }
</div>