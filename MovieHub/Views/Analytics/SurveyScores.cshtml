@model MovieHub.ViewModels.AnalyticsViewModel

@{
    ViewData["Title"] = "MovieHub Survey Scores";
}

<div class="row" style="margin-top: 9.5vh">
    <h1> Survey Scores</h1>
    <div class="col-md-4">
        <hr/>
        <h2>Overview of the average survey scores.</h2>
        <p>This page displays the average score for each survey response.</p>
        <hr/>
    </div>
    <div class="row">
        <div class="col-md-8">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Facilities
                        </th>
                        <th>
                            Hygiene
                        </th>
                        <th>
                            Food and Drinks
                        </th>
                        <th>
                            Staff
                        </th>
                        <th>
                            Screen Quality
                        </th>
                        <th>
                            Sound Quality
                        </th>
                        <th>
                            Price
                        </th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model.SurveyResults)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(vm => item.Facilities)
                    </td>
                    <td>
                        @Html.DisplayFor(vm => item.Hygiene)
                    </td>
                    <td>
                        @Html.DisplayFor(vm => item.FoodDrinks)
                    </td>
                    <td>
                        @Html.DisplayFor(vm => item.Staff)
                    </td>
                    <td>
                        @Html.DisplayFor(vm => item.ScreenQuality)
                    </td>
                    <td>
                        @Html.DisplayFor(vm => item.SoundQuality)
                    </td>
                    <td>
                        @Html.DisplayFor(vm => item.Price)
                    </td>
                </tr>
            }
            </tbody>
        </table>
        </div>
    </div>
</div>