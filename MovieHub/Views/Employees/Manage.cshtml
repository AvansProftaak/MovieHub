@model List<MovieHub.ViewModels.ManageUserRolesViewModel>

<div class="container p-3 bg-light" style="width:100%;color:#F8A613">
<form method="post" >
    <div class="card">
        <div class="card-header">
            <h1>Manage User Roles</h1>
            <p class="text-dark">Add/Remove Roles for User: @ViewBag.UserName.</p>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label text-dark" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="Index" asp-route-id="@ViewBag.userId"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>
</div>