@model IEnumerable<MovieHub.Models.Showtime>

@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid">
    <div class="row ">
        <div class="col-12 text-center bg-black position-fixed">
            <h1 class="display-4">Welcome</h1>
            <p>This is the index-page of MovieHub.<br/>Site under construction</p>
        </div>   
    </div>
    <div class="row" style="margin-top: 140px">
        <div class="col-8 hide-scrollbar" style="min-height: 100%;">
            <div class="row text-center" style="height: calc(100vh - 250px)">
                @foreach (var item in Model!)
                {
                    <div class="col-4">
                        <h4 class="movie-title">@Html.DisplayFor(model => item.Movie.Title)</h4>
                        <img width="80%" src="@Url.Content(item.Movie.ImageUrl)"/>
                        <div>
                            <hr/>
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Movie)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.Movie.Title)
                                </dd>
                                <dt class="col-sm-2">
                                    Time
                                </dt>
                                <dd class="col-sm-10">
                                    @{
                                        var startTime = item.StartAt.ToLocalTime().TimeOfDay.ToString(@"hh\:mm");
                                    }
                                    @Html.DisplayFor(model => startTime)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Hall)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.Hall.Name)
                                </dd>
                                <dt class="col-sm-2">
                                    3D
                                </dt>
                                @if (item.Movie.Is3D)
                                {
                                    <dd class="col-sm-10">
                                        Yes
                                    </dd>
                                }
                                else
                                {
                                    <dd class="col-sm-10">
                                        No
                                    </dd>
                                }
                                <dd class="col-sm-10">
                                    
                                </dd>
                            </dl>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-4">
            <div class="text-center index-hall-overview">
                @* Logo is optional *@
                @* <div class="row"> *@
                @*     <img class="index-hall-logo" src="@Url.Content("~/img/moviehub_wide.jpg")" alt="MovieHub Logo"> *@
                @* </div> *@
                <div class="row">
                    <p class="index-hall-title">CINEMA 1</p>
                    <p class="index-hall-now">Now playing:</p>
                    <p class="index-hall-next">Next show:</p>
                </div>
                <hr class="index-hall-hr"/>
                <div class="row">
                    <p class="index-hall-title">CINEMA 2</p>
                    <p class="index-hall-now">Now playing:</p>
                    <p class="index-hall-next">Next show:</p>
                </div>
                <hr class="index-hall-hr"/>
                <div class="row">
                    <p class="index-hall-title">CINEMA 3</p>
                    <p class="index-hall-now">Now playing:</p>
                    <p class="index-hall-next">Next show:</p>
                </div>
                <hr class="index-hall-hr"/>
                <div class="row">
                    <p class="index-hall-title">CINEMA 4</p>
                    <p class="index-hall-now">Now playing:</p>
                    <p class="index-hall-next">Next show:</p>
                </div>
                <hr class="index-hall-hr"/>
                <div class="row">
                    <p class="index-hall-title">CINEMA 5</p>
                    <p class="index-hall-now">Now playing:</p>
                    <p class="index-hall-next">Next show:</p>
                </div>
                <hr class="index-hall-hr"/>
                <div class="row">
                    <p class="index-hall-title">CINEMA 6</p>
                    <p class="index-hall-now">Now playing:</p>
                    <p class="index-hall-next">Next show:</p>
                </div>
                <hr class="index-hall-hr"/>
            </div>
        </div>
    </div>
</div>