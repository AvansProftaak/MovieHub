@model IEnumerable<MovieHub.Models.MailRequest>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Newsletter index</h1>
<a asp-action="Create" class="btn btn-primary">
    <i class="fa fa-plus" aria-hidden="true"></i>
    Create new
</a>
<br/><br/>
<table id="tblMovies" class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </a> 
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">
                    <i class="fa fa-info-circle" aria-hidden="true"></i>
                </a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                </a>
                <a asp-action="SendNewsletter" class="btn btn-success" asp-route-id="@item.Id">
                    <i class="fa fa-paper-plane" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (TempData["message"] != null)
{
    <script>alert('@TempData["message"]');</script>
}

@section Scripts{
    <script>
    $(document).ready( function () {
        $('#tblMovies').DataTable();
    } );
    </script>
}