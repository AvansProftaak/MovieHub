
@model MovieHub.Models.MovieRuntime

@{
    ViewData["Title"] = "Create";
}

<div class="container" style="margin-top: 9.5vh">

    <div class="col-5 mx-auto">
        <h1>Add</h1>
        <h4>MovieRuntime</h4>
        <hr />
        <div class="row">
            <div class="col-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="MovieId" class="control-label"></label>
                        <select asp-for="MovieId" class ="form-control" asp-items="ViewBag.MovieId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="HallId" class="control-label"></label>
                        <select asp-for="HallId" class ="form-control" asp-items="ViewBag.HallId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartAt" class="control-label"></label>
                        <input asp-for="StartAt" type="date" class="form-control" />
                        <span asp-validation-for="StartAt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndAt" class="control-label"></label>
                        <input asp-for="EndAt" class="form-control" />
                        <span asp-validation-for="EndAt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Time" class="control-label"></label><br/>
                        <input type="text" class="form-control" placeholder="i.e 12:00" name="time" onchange="validateHhMm(this)" required=""/>
                    </div>
                    <div class="form-group">
                        <input id="addButton" type="submit" value="ADD" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
