@model MovieHub.Models.MovieRuntime

@{
    ViewData["Title"] = "Delete";
}

<div class="container" style="margin-top: 9.5vh">

    <div class="col-7 mx-auto">
        
        <h1>Delete</h1>
        <h2>Are you sure you want to delete this runtime?</h2>
        <hr class="overview-thead-hr mb-3"/>
        
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StartAt)
            </dt>
            <dd class="col-sm-10">
                @Model.StartAt.ToString("dd MMMM yyyy")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EndAt)
            </dt>
            <dd class="col-sm-10">
                @Model.EndAt.ToString("dd MMMM yyyy")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Time)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Time)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Title)
            </dd>
            <dt class="col-sm-2">
                Cinema
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Hall.Name)
            </dd>
        </dl>
        <hr class="role-hr mb-3"/>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id"/>
            <a asp-action="Index" class="btn back-button me-4">BACK</a>
            <input type="submit" value="DELETE!" class="btn btn-danger"/>
        </form>
    </div>
</div>