@model MovieHub.Models.MovieRuntime

@{
    ViewData["Title"] = "Details";
}

<div class="container col-4 mx-auto" style="margin-top: 9.5vh">

    <h1>Details</h1>
    <h2>MovieRuntime</h2>
    <hr class="role-hr mt-3 mb-5"/>
    
    <dl class="row">
        <dt class = "col-sm-2">
            Start Date
        </dt>
        <dd class = "col-sm-10">
            @Model.StartAt.ToLocalTime().ToString("dd MMMM yyyy")
        </dd>
        <dt class = "col-sm-2">
            End Date
        </dt>
        <dd class = "col-sm-10">
            @Model.EndAt.ToLocalTime().ToString("dd MMMM yyyy")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class = "col-sm-10">
            @Model.Movie.Title
        </dd>
        <dt class = "col-sm-2">
            Cinema
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hall.Name)
        </dd>
    </dl>
    <div class="form-group col-5 mt-5">
        <a asp-action="Index" class="btn back-button col-4">BACK</a>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary col-7 float-end">EDIT</a>
    </div>

</div>




