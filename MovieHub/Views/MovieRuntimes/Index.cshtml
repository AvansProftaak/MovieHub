@model MovieHub.ViewModels.MovieRuntimeViewModel

@{
    ViewData["Title"] = "Index";
}
<div class="container" style="margin-top: 9.5vh">

    <h1>Movies</h1>
    <h2>Timetable</h2>
    
    <table class="table mb-4">
        <thead>
        <tr class="survey-th">
            <th>
                @Html.DisplayNameFor(model => model.Movie.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRuntime.StartAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRuntime.EndAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRuntime.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRuntime.Hall)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.RuntimeList)
        {
            <tr class="survey-td">
                <td>
                    @Html.DisplayFor(modelItem => item.Movie.Title)
                </td>
                <td>
                    @item.StartAt.ToString("dd-MM-yyyy")
                </td>
                <td>
                    @item.EndAt.ToString("dd-MM-yyyy")
                </td>
                <td>
                    @item.Time.ToString(@"hh\:mm")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hall.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    
    <div>
        <a class="btn btn-primary col-3" asp-action="Create">Add Runtime</a>
    </div>
</div>
