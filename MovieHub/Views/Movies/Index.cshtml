@model IEnumerable<MovieHub.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin-top: 9.5vh">

    
    <div class="row col-10 mx-auto">
        <h1>Movie Overview</h1>
        <h2>All movies</h2>
        
        <div class="col-3">
            @Html.DisplayNameFor(model => model.Title)
        </div>
        <div class="col-2">
            @Html.DisplayNameFor(model => model.Duration)
        </div>
        <div class="col-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </div>
        <div class="col-1">
            @Html.DisplayNameFor(model => model.Is3D)
        </div>
        <div class="col-2">
            @Html.DisplayNameFor(model => model.Language)
        </div>
        <div class="col-2">
        </div>
        
        <hr class="overview-thead-hr"/>
    </div>
    
    <div class="row col-10 mx-auto">
        @foreach (var item in Model!)
        {



            <div class="col-3">
                @Html.DisplayFor(modelItem => item.Title)
            </div>
            <div class="col-2">
                @Html.DisplayFor(modelItem => item.Duration) mins
            </div>
            <div class="col-2">
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </div>
            <div class="col-1">
                @Html.DisplayFor(modelItem => item.Is3D)
            </div>
            <div class="col-2">
                @Html.DisplayFor(modelItem => item.Language)
            </div>
            <div class="col-2">
                <a class="align-middle" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <div class="row float-end">
                    <div class="col-4">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn edit-role-btn btn-sm"><i class="fa fa-pencil" style="color: #FFFFFF"></i></a>
                    </div>
                    <div class="col-3" style="margin-left: 4px">
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash" style="color: #FFFFFF"></i></a>
                    </div>
                </div>
            </div>
            <hr class="role-hr"/>
        }
        <div class="col-4 mx-auto mt-5">
            <button onclick="toCreateMovie()" class="btn btn-primary" style="width: 100%">Add new movie</button>
        </div>
    </div>
</div>