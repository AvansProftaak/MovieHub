@model IEnumerable<MovieHub.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn-primary"><i class="fa fa-plus" aria-hidden="true"></i>
 Create New</a>
</p>
<br/>
<table id="tblMovies" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cast)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImdbScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Is3D)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSecret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            @* <th> *@
            @*     @Html.DisplayNameFor(model => model.ImageUrl) *@
            @* </th> *@
            @* <th> *@
            @*     @Html.DisplayNameFor(model => model.TrailerUrl) *@
            @* </th> *@
            @* <th> *@
            @*     @Html.DisplayNameFor(model => model.MovieGenres) *@
            @* </th>             *@
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration) mins
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cast)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImdbScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Is3D)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSecret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language)
            </td>
            @* <td> *@
            @*     @Html.DisplayFor(modelItem => item.ImageUrl) *@
            @* </td> *@
            @* <td> *@
            @*     @Html.DisplayFor(modelItem => item.TrailerUrl) *@
            @* </td> *@
            @* <td> *@
            @*     @Html.DisplayFor(modelItem => item.MovieGenres) *@
            @* </td> *@
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">
                <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a> 
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
                </a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this movie')">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{
    <script>
    $(document).ready( function () {
        $('#tblMovies').DataTable();
    } );
    </script>
    
}