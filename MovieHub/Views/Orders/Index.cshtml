@using static MovieHub.Models.Tickettype;
@using System.Collections
@model MovieHub.Models.Showtime




@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <dl class="row">
        <h4>Selected Showtime:</h4>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hall)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HallId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartAt)
        </dd>
    </dl>
    <br />
    <p>order works! Here goes different tickettype selection.</p>
    
    <table>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
        </tr>
        @code {
            
            IList<Tickettype> tickets = Tickettype.Tickettypes;
        }
        @foreach (Tickettype ticket in tickets)
        {
            <tr>
                <td>@ticket.Name</td>
                <td>@ticket.Price</td>
                <td>@ticket.Description</td>
            </tr>
        }
    </table>
    
    
    <br />
    <button onclick="location.href='@Url.Action("Index", "Seats", new {hallId = Model.HallId})'"
            class="btn btn-primary">Continue to seatmap</button>
</div>
