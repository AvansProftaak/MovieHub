@model MovieHub.ViewModels.PaymentViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 120px">
    <div class="row">
        <div class="col text-center movieborder">
            <h2>Total Price:</h2>
            <p>&euro; @Model.Order.TotalPrice</p>
            <form method="post" asp-action="ApplyCoupon" class="mt-2">
                <input type="hidden" name="OrderId" value="@Model.Order.Id" />
                <input type="hidden" name="PaymentMethodId" value="@Model.PaymentMethodId" />
                <div class="row justify-content-center">
                    <div class="col-sm-5" id="inputEmail">
                        <input class="form-control" type="text" id="voucherId" name="voucherId" placeholder="Coupon Code" style="font-size: 1.4vh">
                        <span asp-validation-for="@Model.VoucherId" class="text-danger"></span>
                    </div>
                    <button style="width: 20%; height: 20%; font-size: 1.3vh" class="btn btn-primary ms-1">Submit</button>
                </div>
            </form>
        </div>
        <div class="col-6 text-center">
            <h1>Continue to Payment</h1>
            <button onclick="goToPayment()" style="margin-top: 24px" class="btn btn-primary btn-sizing">Continue</button>
        </div>
        <div class="col"></div>
    </div>
</div>

<script>
function goToPayment() {
    location.href='@Url.Action("CreatePayment", "Payments")?orderId=' + @Model.Order.Id + '&paymentMethodId=' + @Model.PaymentMethodId
}
</script>