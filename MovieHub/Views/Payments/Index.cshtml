@model MovieHub.Models.Payment

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="margin-top: 120px">
    @if (@Model.Status == StatusEnum.Open)
        {
            <div class="row">
                <div class="col-5 offset-md-4 text-center">
                    <h1>Please follow the instructions on the terminal</h1>
                    <img id="loading" src="@Url.Content("~/img/loading-buffering.gif")" width="8%" alt="Loading ..."/>
                    <button onclick="location.href='@Url.Action("UpdateStatus", "Payments", new {orderId = 2, status = 1})'" style="margin-top: 24px" class="btn btn-primary btn-sizing">Update status</button>
                </div>
            </div>
        }
        @if (@Model.Status == StatusEnum.Pending)
        {
            <div class="row">
                <div class="col-5 offset-md-4 text-center">
                    <h1>Processing payment...</h1>
                    <img id="loading" src="@Url.Content("~/img/loading-buffering.gif")" width="8%" alt="Loading ..."/>
                    <button onclick="location.href='@Url.Action("UpdateStatus", "Payments", new {orderId = 2, status = 2})'" style="margin-top: 24px" class="btn btn-primary btn-sizing">Update status</button>
                </div>
            </div>
        }
        @if (@Model.Status == StatusEnum.Paid)
        {
            <div class="row text-center">
                <div class="col-5 offset-md-4">
                    <h1>Payment successful!</h1>
                    <button onclick="location.href='@Url.Action("ReceiveTicket", "Payments")'" style="margin-top: 24px" class="btn btn-primary btn-sizing">Receive Ticket</button>
                </div>
            </div>
        }
</div>

