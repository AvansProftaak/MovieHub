@model int

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="margin-top: 120px">
    <div class="row">
        <div class="col-5 offset-md-4 text-center">
            <h1>Please select your payment method</h1>
            <label for="paymentMethod">Payment method:</label>
            <select name="paymentMethod" id="paymentMethod">
              <option value="1">Pay with card at the cinema</option> 
              <option value="2">Credit card</option>
              <option value="3">Paypal</option>
              <option value="4">Ideal</option>
            </select>
            <button onclick="goToPayment()" style="margin-top: 24px" class="btn btn-primary btn-sizing">Continue</button>
        </div>
    </div>
</div>

<script>
function goToPayment() {
    let paymentMethod = document.getElementById("paymentMethod")
    let paymentMethodval = paymentMethod.value
    location.href='@Url.Action("ApplyCoupon", "Payments")?orderId=' + @Model + '&paymentMethodId=' + paymentMethodval
}
</script>