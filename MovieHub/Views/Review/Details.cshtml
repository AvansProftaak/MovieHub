@model MovieHub.Models.Review

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Review</h4>
    <hr />
    <div class="col-3" style="padding-bottom: 25px">
        <div class="movieborder">
            <h4 class="ReviewHall">Hall: @Html.DisplayFor(model => model.HallId)</h4>
            @*<a href="@Url.Action("Details", "Review", new {id = item.Id})">
                <img width="80%" src="@Url.Content(item.ImageUrl)" alt="MoviePoster"/>
            </a>*@
            
            <div class="details-container-time">
                <hr/>

                <p style="font-size: 1.9vh">Comment:</p>
                <h4 class="Review.Disp"> @Html.DisplayFor(model => model.Details)</h4>
                <br/>
                <p style="font-size: 1.9vh">Score:</p>
                <span  style="font-size: 1.7vh">
                    @{
                        <h4 class="Review.Disp">DisplayQuality: @Html.DisplayFor(model => model.DisplayQuality)/5</h4>
                        <h4 class="Review.SoundQuality">SoundQuality: @Html.DisplayFor(model => model.SoundQuality)/5</h4>
                        <h4 class="Review.FoodQuality">FoodQuality: @Html.DisplayFor(model => model.FoodQuality)/5</h4>
                        <h4 class="Review.FoodQuality">FoodQuality: @Html.DisplayFor(model => model.FoodQuality)/5</h4>
                        <h4 class="Review.Disturbance">Disturbance: @Html.DisplayFor(model => model.Disturbance)/5</h4>
                        <h4 class="Review.FoodQuality">Hygiene: @Html.DisplayFor(model => model.Hygiene)/5</h4>
                    }
                </span>
                <br/>
                                
                                <p style="font-size: 1.9vh">Submitter:</p>
                                    <span  style="font-size: 1.7vh">
                                        @{
                                            <h4 class="Review.Name">Name: @Html.DisplayFor(model => model.Name)</h4>
                                            @if ((User.IsInRole("Admin")) || (User.IsInRole("Manager")))
                                            {
                                                <h4 class="Review.Email">Name: @Html.DisplayFor(model => model.Email)</h4>
                                            }
                                            <h4 class="Review.TimeCreated">Date: @Html.DisplayFor(model => model.TimeCreated)</h4>
                                            @if ((User.IsInRole("Admin")) || (User.IsInRole("Manager")))
                                            {
                                                <button onclick="location.href='@Url.Action("Delete", "Review", new {id = Model.Id})'"
                                                        class="btn btn-primary btn-sizing ms-1" style="font-size: 1.3vh">Delete</button>
                                            }
                                        }
                                    </span>
                                
                                
                                <hr/>    

                            </div>
                        </div>
                    </div>
                    
            </div>
<div class="col-3">

 <div id="newsletterDiv" style="margin-top: 1vh;">
     <h4 class="movie-title" style="font-size: 2vh">Sign up for the newsletter</h4>
     <div class="row justify-content-center">
         <div class="col-sm-5" id="inputEmail">
             <input class="form-control" type="text" id="email" name="newsletter" placeholder="Enter Email" style="font-size: 1.4vh">
         </div>
             <button style="width: 20%; height: 20%; font-size: 1.3vh" onclick="checkEmail()" class="btn btn-primary ms-1">Sign up</button>
         </div>
     </div>

     </div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
