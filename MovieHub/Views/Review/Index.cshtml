@model IEnumerable<MovieHub.Models.Review>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>




<div class="row">
        <div class="col-9 hide-scrollbar">
            <div class="row text-center">

                @foreach (var item in Model)
                {
                    <div class="col-3" style="padding-bottom: 25px">
                        <div class="movieborder">
                            <h4 class="ReviewHall">Hall: @Html.DisplayFor(model => item.HallId)</h4>
                            @*<a href="@Url.Action("Details", "Review", new {id = item.Id})">
                                <img width="80%" src="@Url.Content(item.ImageUrl)" alt="MoviePoster"/>
                            </a>*@
                            
                            <div class="details-container-time">
                                <hr/>

                                <p style="font-size: 1.9vh">Review:</p>
                                <span  style="font-size: 1.7vh">
                                    @{
                                        <button onclick="location.href='@Url.Action("Details", "Review", new {id = item.Id})'"
                                                class="btn btn-primary btn-sizing ms-1" style="font-size: 1.3vh">Review Details</button>
                                    }
                                </span>
                                
                                <p style="font-size: 1.9vh">Score:</p>
                                    <span  style="font-size: 1.7vh">
                                        @{
                                            <h4 class="Review.Disp">DisplayQuality: @Html.DisplayFor(model => item.DisplayQuality)/5</h4>
                                            <h4 class="Review.SoundQuality">SoundQuality: @Html.DisplayFor(model => item.SoundQuality)/5</h4>
                                            <h4 class="Review.FoodQuality">FoodQuality: @Html.DisplayFor(model => item.FoodQuality)/5</h4>
                                            <h4 class="Review.FoodQuality">FoodQuality: @Html.DisplayFor(model => item.FoodQuality)/5</h4>
                                            <h4 class="Review.Disturbance">Disturbance: @Html.DisplayFor(model => item.Disturbance)/5</h4>
                                            <h4 class="Review.FoodQuality">Hygiene: @Html.DisplayFor(model => item.Hygiene)/5</h4>
                                        }
                                    </span>
                                
                                <p style="font-size: 1.9vh">Submitter:</p>
                                    <span  style="font-size: 1.7vh">
                                        @{
                                            <h4 class="Review.Name">Name: @Html.DisplayFor(model => item.Name)</h4>
                                            <h4 class="Review.TimeCreated">Date: @Html.DisplayFor(model => item.TimeCreated)</h4>
                                            
                                        }
                                    </span>
                                
                                
                                <hr/>    

                            </div>
                        </div>
                    </div>
                    @if ((User.IsInRole("Admin")) || (User.IsInRole("Back-Office")) || (User.IsInRole("Manager")))
                    {
                        <li class="nav-item">
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> </li>
                        <li class="nav-item">
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </li>
                    }
                }
                
            </div>
        </div>
        <div class="col-3">
            
            
            <div id="newsletterDiv" style="margin-top: 1vh;">
                <h4 class="movie-title" style="font-size: 2vh">Sign up for the newsletter</h4>
                <div class="row justify-content-center">
                    <div class="col-sm-5" id="inputEmail">
                        <input class="form-control" type="text" id="email" name="newsletter" placeholder="Enter Email" style="font-size: 1.4vh">
                    </div>
                    <button style="width: 20%; height: 20%; font-size: 1.3vh" onclick="checkEmail()" class="btn btn-primary ms-1">Sign up</button>
                </div>
            </div>
        </div>
    </div>







