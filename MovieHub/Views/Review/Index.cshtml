@model IEnumerable<MovieHub.Models.Review>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DisplayQuality)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoundQuality)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodQuality)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disturbance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hygiene)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeCreated)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayQuality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoundQuality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodQuality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disturbance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hygiene)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeCreated)
            </td>
            <td>

                @if ((User.IsInRole("Admin")) || (User.IsInRole("Back-Office")) || (User.IsInRole("Manager")))
                {
                    <li class="nav-item">
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> </li>
                    <li class="nav-item">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </li>
                }


            </td>
        </tr>
    }
    </tbody>
</table>*@
