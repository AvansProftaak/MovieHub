@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> _signInManager
@inject UserManager<ApplicationUser> _userManager

<ul class="navbar-nav">
    @if (_signInManager.IsSignedIn(User))
    {
        var firstName = _userManager.GetUserAsync(User).Result.FirstName;

        if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Back-Office"))
        {
            <li class="nav-item dropdown" style="cursor:pointer;">
                <a class="nav-link dropdown-toggle hover-orange" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="False">Movies</a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item text-dark" asp-controller="Movies" asp-action="Index">Movie Overview</a>
                    <a class="dropdown-item text-dark" asp-controller="Movies" asp-action="Create">Add Movie</a>
                    <a class="dropdown-item text-dark" asp-controller="MovieRuntimes" asp-action="Index">Movie Schedules</a>
                    @* <a class="dropdown-item text-dark" asp-controller="CateringPackage" asp-action="Index">CateringPackages</a> *@

                </div>
            </li>
        }

        if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            <li class="nav-item dropdown" style="cursor:pointer">
                @if (User.IsInRole("Admin"))
                {
                    <a class="nav-link dropdown-toggle hover-orange" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="False">
                        Admin Options
                    </a>
                }
                                    
                @if (User.IsInRole("Manager"))
                {
                    <a class="nav-link dropdown-toggle hover-orange" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="False">
                        Manager Options
                    </a>
                }
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Admin" asp-action="RoleList">Roles</a>
                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Survey" asp-action="Index">Surveys</a>
                </div>
            </li>
        }

        <li class="nav-item dropdown" style="pointer-events: none; margin-left: 16px; padding: 0 0 0 16px; border-left: 1px solid #F8A613">
            <p class="nav-link" style="color: #FFFFFF">Hello @firstName!</p>
        </li>


        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                <button type="submit" style="color:#F8A613" class="nav-link btn btn-link hover-white">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item" style="border-left: 1px solid #F8A613" >
            <a class="nav-link hover-orange" style="color: #FFFFFF" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link hover-orange" style="color: #FFFFFF" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>