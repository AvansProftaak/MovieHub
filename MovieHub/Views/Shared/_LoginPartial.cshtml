@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> _signInManager
@inject UserManager<IdentityUser> _userManager

<ul class="navbar-nav">
    @if (_signInManager.IsSignedIn(User))
    {

        <li class="nav-item dropdown" style="cursor:pointer;">
            <a class="nav-link dropdown-toggle hover-orange" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="False">Movies</a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <a class="dropdown-item text-dark" asp-controller="Movies" asp-action="Index">Movie Overview</a>
                <a class="dropdown-item text-dark" asp-controller="Movies" asp-action="Create">Add Movie</a>
                <a class="dropdown-item text-dark" asp-controller="" asp-action="">Add Schedule</a>
                @* <a class="dropdown-item text-dark" asp-controller="CateringPackage" asp-action="Index">CateringPackages</a> *@

            </div>
        </li>
        
        if (User.IsInRole("Admin") || User.IsInRole("Manager")) {
        <li class="nav-item dropdown" style="cursor:pointer">
            <a class="nav-link dropdown-toggle hover-orange" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="False">Employees</a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <a class="dropdown-item text-dark" asp-controller="Movies" asp-action="Index">Add Manager</a>
                <a class="dropdown-item text-dark" asp-controller="Movies" asp-action="Index">Add Back-Office</a>
                <a class="dropdown-item text-dark" asp-controller="Movies" asp-action="Index">Add Front-Office</a>
            </div>
        </li>
        }

        if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            <li class="nav-item dropdown" style="cursor:pointer">
                <a class="nav-link dropdown-toggle hover-orange" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="False">@User.Identity?.Name Panel</a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account</a>
                    <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Add employee</a>
                </div>
            </li>
        }

        <li class="nav-item" style="border-left: 1px solid #F8A613">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                <button type="submit" style="color:#F8A613" class="nav-link btn btn-link hover-white">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item" style="border-left: 1px solid #F8A613" >
            <a class="nav-link hover-orange" style="color: #FFFFFF" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link hover-orange" style="color: #FFFFFF" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>