@model MovieHub.ViewModels.CreateSurveyViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="container" style="margin-top: 9.5vh">

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row col-10 mx-auto">    
            <h1>Survey</h1>
            <h2>Thank you for helping us improve</h2>
            <hr class="role-hr mt-3 mb-5" />
            <div class="col-7">
                    
                <div class="form-group">
                    <label class="control-label movie-p" style="font-size: 1.3vh">What did you think about the price of our tickets?</label>
                    <div class="product-review-stars">
                        <input type="radio" id="TicketPrice5" name="Survey.TicketPrice" value="5" class="visuallyhidden" required="required"/><label for="TicketPrice5" title="!Rocks">★</label>
                        <input type="radio" id="TicketPrice4" name="Survey.TicketPrice" value="4" class="visuallyhidden"/><label for="TicketPrice4" title="Pretty good">★</label>
                        <input type="radio" id="TicketPrice3" name="Survey.TicketPrice" value="3" class="visuallyhidden"/><label for="TicketPrice3" title="Meh">★</label>
                        <input type="radio" id="TicketPrice2" name="Survey.TicketPrice" value="2" class="visuallyhidden"/><label for="TicketPrice2" title="Kinda bad">★</label>
                        <input type="radio" id="TicketPrice1" name="TSurvey.icketPrice" value="1" class="visuallyhidden"/><label for="TicketPrice1" title="Sucks big time">★</label>
                    </div>
                    <span asp-validation-for="Survey.TicketPrice" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label movie-p" style="font-size: 1.3vh">How is the quality of the cinema screen?</label>
                    <div class="product-review-stars">
                        <input type="radio" id="ScreenQuality5" name="Survey.ScreenQuality" value="5" class="visuallyhidden" required="required"/><label for="ScreenQuality5" title="!Rocks">★</label>
                        <input type="radio" id="ScreenQuality4" name="Survey.ScreenQuality" value="4" class="visuallyhidden"/><label for="ScreenQuality4" title="Pretty good">★</label>
                        <input type="radio" id="ScreenQuality3" name="Survey.ScreenQuality" value="3" class="visuallyhidden"/><label for="ScreenQuality3" title="Meh">★</label>
                        <input type="radio" id="ScreenQuality2" name="Survey.ScreenQuality" value="2" class="visuallyhidden"/><label for="ScreenQuality2" title="Kinda bad">★</label>
                        <input type="radio" id="ScreenQuality1" name="Survey.ScreenQuality" value="1" class="visuallyhidden"/><label for="ScreenQuality1" title="Sucks big time">★</label>
                    </div>
                    <span asp-validation-for="Survey.ScreenQuality" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label movie-p" style="font-size: 1.3vh">How is the sound of the movies?</label>
                    <div class="product-review-stars">
                        <input type="radio" id="SoundQuality5" name="Survey.SoundQuality" value="5" class="visuallyhidden" required="required"/><label for="SoundQuality5" title="!Rocks">★</label>
                        <input type="radio" id="SoundQuality4" name="Survey.SoundQuality" value="4" class="visuallyhidden"/><label for="SoundQuality4" title="Pretty good">★</label>
                        <input type="radio" id="SoundQuality3" name="Survey.SoundQuality" value="3" class="visuallyhidden"/><label for="SoundQuality3" title="Meh">★</label>
                        <input type="radio" id="SoundQuality2" name="Survey.SoundQuality" value="2" class="visuallyhidden"/><label for="SoundQuality2" title="Kinda bad">★</label>
                        <input type="radio" id="SoundQuality1" name="Survey.SoundQuality" value="1" class="visuallyhidden"/><label for="SoundQuality1" title="Sucks big time">★</label>
                    </div>
                    <span asp-validation-for="Survey.SoundQuality" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label movie-p" style="font-size: 1.3vh">How crispy was the popcorn?</label>
                    <div class="product-review-stars">
                        <input type="radio" id="PopcornQuality5" name="Survey.PopcornQuality" value="5" class="visuallyhidden" required="required"/><label for="PopcornQuality5" title="!Rocks">★</label>
                        <input type="radio" id="PopcornQuality4" name="Survey.PopcornQuality" value="4" class="visuallyhidden"/><label for="PopcornQuality4" title="Pretty good">★</label>
                        <input type="radio" id="PopcornQuality3" name="Survey.PopcornQuality" value="3" class="visuallyhidden"/><label for="PopcornQuality3" title="Meh">★</label>
                        <input type="radio" id="PopcornQuality2" name="Survey.PopcornQuality" value="2" class="visuallyhidden"/><label for="PopcornQuality2" title="Kinda bad">★</label>
                        <input type="radio" id="PopcornQuality1" name="Survey.PopcornQuality" value="1" class="visuallyhidden"/><label for="PopcornQuality1" title="Sucks big time">★</label>
                    </div>
                    <span asp-validation-for="Survey.PopcornQuality" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label movie-p" style="font-size: 1.3vh">Have you experienced nuisance from other visitors?</label>
                    <div class="product-review-stars">
                        <input type="radio" id="Nuisance5" name="Survey.Nuisance" value="5" class="visuallyhidden" required="required"/><label for="Nuisance5" title="!Rocks">★</label>
                        <input type="radio" id="Nuisance4" name="Survey.Nuisance" value="4" class="visuallyhidden"/><label for="Nuisance4" title="Pretty good">★</label>
                        <input type="radio" id="Nuisance3" name="Survey.Nuisance" value="3" class="visuallyhidden"/><label for="Nuisance3" title="Meh">★</label>
                        <input type="radio" id="Nuisance2" name="Survey.Nuisance" value="2" class="visuallyhidden"/><label for="Nuisance2" title="Kinda bad">★</label>
                        <input type="radio" id="Nuisance1" name="Survey.Nuisance" value="1" class="visuallyhidden"/><label for="Nuisance1" title="Sucks big time">★</label>
                    </div>
                    <span asp-validation-for="Survey.Nuisance" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label class="control-label movie-p" style="font-size: 1.3vh">How clean is our cinema?</label>
                    <div class="product-review-stars">
                        <input type="radio" id="Hygiene5" name="Survey.Hygiene" value="5" class="visuallyhidden" required="required"/><label for="Hygiene5" title="!Rocks">★</label>
                        <input type="radio" id="Hygiene4" name="Survey.Hygiene" value="4" class="visuallyhidden"/><label for="Hygiene4" title="Pretty good">★</label>
                        <input type="radio" id="Hygiene3" name="Survey.Hygiene" value="3" class="visuallyhidden"/><label for="Hygiene3" title="Meh">★</label>
                        <input type="radio" id="Hygiene2" name="Survey.Hygiene" value="2" class="visuallyhidden"/><label for="Hygiene2" title="Kinda bad">★</label>
                        <input type="radio" id="Hygiene1" name="Survey.Hygiene" value="1" class="visuallyhidden"/><label for="Hygiene1" title="Sucks big time">★</label>
                    </div>
                    <span class="text-danger"></span>
                </div>

                <div class="form-group  mb-5 ">
                    <label class="control-label movie-p" style="font-size: 1.3vh">What did you think of the height of the toilets?</label>
                    <div class="product-review-stars">
                        <input type="radio" id="ToiletHeight5" name="Survey.ToiletHeight" value="5" class="visuallyhidden" required="required"/><label for="ToiletHeight5" title="!Rocks">★</label>
                        <input type="radio" id="ToiletHeight4" name="Survey.ToiletHeight" value="4" class="visuallyhidden"/><label for="ToiletHeight4" title="Pretty good">★</label>
                        <input type="radio" id="ToiletHeight3" name="Survey.ToiletHeight" value="3" class="visuallyhidden"/><label for="ToiletHeight3" title="Meh">★</label>
                        <input type="radio" id="ToiletHeight2" name="Survey.ToiletHeight" value="2" class="visuallyhidden"/><label for="ToiletHeight2" title="Kinda bad">★</label>
                        <input type="radio" id="ToiletHeight1" name="Survey.ToiletHeight" value="1" class="visuallyhidden"/><label for="ToiletHeight1" title="Sucks big time">★</label>
                    </div>
                    <span asp-validation-for="Survey.ToiletHeight" class="text-danger"></span>
                </div>
            </div>
                
            <div class="col-5 my-auto">
                <div class="form-group col-10 mb-3">
                    <label class="control-label movie-p mb-2" style="font-size: 1.3vh">What is your name?</label>
                    <input asp-for="Survey.Name" class="form-control"/>
                    <span asp-validation-for="Survey.Name" class="text-danger"></span>
                </div>
                
                <div class="form-group col-10 mb-3">
                    <label class="control-label movie-p mb-2" style="font-size: 1.3vh">What is your emailaddress?</label>
                    <input asp-for="Survey.Email" class="form-control"/>
                    <span asp-validation-for="Survey.Email" class="text-danger"></span>
                </div>
                
                <div class="form-group col-10 mb-3">
                    <label class="control-label movie-p mb-2" style="font-size: 1.3vh">In which hall did you watch a movie?</label>
                    <select class="form-select survey-select" name="Survey.CinemaNumber">
                        <option value="none" selected disabled hidden>SELECT CINEMA</option>
                        @foreach (var hall in Model.HallList)
                        {
                            <option name="Survey.CinemaNumber" value="@hall.Id">@hall.Name</option>
                        }
                    </select>
                </div>
                <span asp-validation-for="Survey.CinemaNumber" class="text-danger"></span>
            </div>
                
            <div class="form-group mx-auto col-5">
                <a asp-controller="Home" asp-action="Index" class="btn back-button col-4">BACK</a>
                <input type="submit" value="SEND" class="btn btn-primary col-7 float-end"/>
            </div>
                
        </div>
    </form>
</div>













