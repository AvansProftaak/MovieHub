@model MovieHub.ViewModels.SurveysViewModel

@{
    ViewData["Title"] = "Surveys " + @Model.Hall.Name;
}
<div class="container" style="margin-top: 9.5vh">
    
    <div class="col-3">
        <h1 style="font-family: 'Poiret One', cursive">@Model.Hall.Name</h1>
        <h2>All surveys</h2>
        <hr class="overview-thead-hr mb-5"/>
    </div>
        
    <table class="col-12">
        <tr class="survey-th">
            <th>Date/time</th>
            <th>Price</th>
            <th>Screen</th>
            <th>Sound</th>
            <th>Popcorn</th>
            <th>Nuisance</th>
            <th>Hygiene</th>
            <th>Toilet</th>
            <th>Name</th>
            <th>Email</th>      
        </tr>
        
        @foreach (var survey in Model.SurveyList)
        {
            <tr class="survey-td">
                <td>@survey.TimeStamp.Value.ToString("dd/MM/yyyy - HH:mm")</td>
                <td>@survey.TicketPrice/5</td>
                <td>@survey.ScreenQuality/5</td>
                <td>@survey.SoundQuality/5</td>
                <td>@survey.PopcornQuality/5</td>
                <td>@survey.Nuisance/5</td>
                <td>@survey.Hygiene/5</td>
                <td>@survey.ToiletHeight/5</td>
                <td>@survey.Name</td>
                <td><a href='mailto:mailto:@survey.Email?subject=Your MovieHub survey of @survey.TimeStamp.Value.Date.ToString("dd MMMM yyyy")'>SEND MAIL</a></td>
            </tr>
                
        }
    </table>
    <div class="col-4 mt-3">
        <a asp-action="Index" class="btn btn-primary">BACK TO OVERVIEW</a>
    </div>

</div>

